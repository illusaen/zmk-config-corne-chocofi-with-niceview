#define EQU EQUAL
#define MIN MINUS
#define CRT CARET
#define PUP PG_UP
#define PDN PG_DN
#define VUP C_VOL_UP
#define VDN C_VOL_DN
#define BRK PAUSE_BREAK

#define XXX &none
#define ___ &trans

#define NUMWORD &num_word NUM

#define LNCH  &kp LC(SPACE)
#define SSHT  &kp LS(LC(LG(N4)))
#define CMNT  &kp LG(SLASH)
#define SAVE  &kp LG(S)
#define MCUT  &kp LG(X)
#define MCOPY &kp LG(C)
#define PASTE &kp LG(V)
#define MUNDO &kp LG(Z)
#define REDO  &kp LG(LS(S))

ZMK_MACRO(dbl_arrow, bindings = <&kp EQUAL &kp GT>;)
ZMK_MACRO(sgl_arrow, bindings = <&kp MINUS &kp GT>;)
ZMK_MACRO(js_interp, bindings = <&kp GRAVE &kp DOLLAR &kp LBRC &kp RBRC &kp GRAVE>;)
ZMK_MACRO(js_fn, bindings = <&kp EQUAL &kp SPACE &kp LPAR &kp RPAR &kp SPACE &kp EQUAL &kp GT &kp SPACE &kp LBRC>;)
ZMK_MACRO(dbl_col, bindings = <&kp COLON &kp COLON>;)

// Tap: left bracket/brace | double-tap: right version.
ZMK_TAP_DANCE(bracket, bindings = <&kp LBKT>, <&kp RBKT>;
              tapping-term-ms = <200>;)
ZMK_TAP_DANCE(brace, bindings = <&kp LBRC>, <&kp RBRC>;
              tapping-term-ms = <200>;)
ZMK_TAP_DANCE(paren, bindings = <&kp LPAR>, <&kp RPAR>;
              tapping-term-ms = <200>;)
